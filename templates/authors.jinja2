{% extends "menu.jinja2" %}
{% block title %}Authors of Articles{% endblock %}
{% block content %}
 									<div id="content">
										<section class="box post">
										<header class="blog_listing">
											<h2>Authors in Articles from NSC</h2>
										</header>
										{% for author, posts in authors.iteritems() %}
											<div class="author_list_item">
												<h3><a href="{{ author.replace(' ', '_') }}1.html">{{ author }}: {{ posts|length }} posts</a></h3>
											</div>
										{% endfor %}
 										</section>
									</div>
{% endblock %}