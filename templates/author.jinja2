{% extends "menu.jinja2" %}
{% block title %}Articles by: {{ author }}{% endblock %}
{% block content %}
									<div id="content">
										<section class="box post">
											<header class="blog_listing">
												<h2>Articles with tag: {{ tag }}</h2>
											</header>
											{% for post in posts %}
												<div class="author_post">
													<h3 class="post_title"><a href="{{ post.filename }}.html">{{ post.title }}</a></h3>
													<div class="posted_date">posted: {{ post.posted_date.strftime('%d, %b %Y at %I:%M %p') }}</div>
													{{ post.hook }}
												</div>
											{% endfor %}
											{% if total_pages > 1 %}
												<div id = 'page_numbers'>Pages
												{% if page_num > 1 %}
													<span class="pages"><a href="{{ author_file }}{{ page_num - 1 }}.html">&lt;</a></span>
												{% endif %}
													<span class="pages current_page">{{ page_num }}</span>
												{% if page_num < total_pages %}
													<span class="pages"><a href="{{ author_file }}{{ page_num + 1 }}.html">&gt;</a></span>
												{% endif %}
												</div>
											{% endif %}
 										</section>
									</div>
{% endblock %}